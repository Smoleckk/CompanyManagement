@using InvoicePWABlazor.Shared.Common
@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>

        <MudLayout Style="height:100%;background-image: linear-gradient(to right, #fff 0%, #ccc);min-height:100vh;">

            <MudPaper Elevation="25">
                <MudAppBar Style="background-color:#fff">
                    <MudText Typo="Typo.h6" Class="ml-3 mr-5" Color="Color.Dark"><a class="text-dark" style="cursor:pointer;text-decoration: none; " href="/">Keep Calm and Work</a></MudText>
                    @*                    <MudIconButton Icon="@Icons.Material.Outlined.Add" Color="Color.Inherit" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Edit" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Remove" Color="Color.Inherit" />
                    <MudIconButton Icon="@Icons.Material.Outlined.Settings" Color="Color.Inherit" />*@
                    <MudSpacer />
                    @*                    <MudIconButton Icon="@Icons.Material.Outlined.Notifications" />
                    <MudIconButton Icon="@Icons.Material.Outlined.PushPin" />
                    <MudIconButton Icon="@Icons.Material.Outlined.PeopleAlt" />
                    <MudIconButton Icon="@Icons.Material.Outlined.MoreVert" Color="Color.Inherit" />*@
                    @*<MudAvatar Class="ml-3 mr-5" Color="Color.Dark">U</MudAvatar>*@
                    <LoginLogoutButton />
                </MudAppBar>
            </MudPaper>

            <MudDrawer @bind-Open="@open" Elevation="1" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true" Style="background-color:#fff">
                <MudNavMenu Class="mt-5">
                    <MudNavLink Icon="@Icons.Filled.Home" Href="">Home</MudNavLink>
                    <MudNavLink Icon="@Icons.Filled.ContentCopy" Href="/table">Faktury</MudNavLink>
                    <MudNavLink Icon="@Icons.Filled.Book" Href="/order">Zlecenia</MudNavLink>
                    <MudNavLink Icon="@Icons.Filled.PersonAdd" Href="/contractor">Kontrahent</MudNavLink>
                    <MudNavLink Icon="@Icons.Filled.FormatListBulleted" Href="/item">Produkty</MudNavLink>
                    <MudNavLink Icon="@Icons.Filled.EditNote" Href="/note">Notatki/Zadania</MudNavLink>
                    <MudNavLink Icon="@Icons.Filled.Schedule" Href="/scheduler">Kalendarz</MudNavLink>


                </MudNavMenu>
            </MudDrawer>

            <MudMainContent Class="pt-16 pb-16">
                <MudContainer Class="mt-6 mb-16">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <MudLayout Style="height:100%;background-image: linear-gradient(to right, #F5F7FA 0%, #B8C6DB);min-height:100vh;">
            <MudMainContent Class="pt-16 ">
                <MudContainer Class="mt-6">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </NotAuthorized>
</AuthorizeView>
@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}

